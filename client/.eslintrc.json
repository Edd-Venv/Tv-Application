{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": false
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "camelcase": "error",
    "quotes": ["error", "double"],
    "no-undef": "error",
    "sort-imports": "warn",
    "eol-last": "off",
    "linebreak-style": "off"
  }
}
